<?xml version="1.0" encoding="utf-8"?><!-- This file show up the design of the items, how they can be shown-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        style="@style/imageItem" />


    <LinearLayout
        android:id="@+id/textContainer"
        style="@style/listItemInfos"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/miwokTextView"
            style="@style/miwokWord"
            tools:text="utti" />

        <TextView
            android:id="@+id/englishTextView"
            style="@style/englishWord"
            tools:text="one" />

    </LinearLayout>

</LinearLayout>